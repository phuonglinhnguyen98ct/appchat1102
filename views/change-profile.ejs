<!DOCTYPE html>
<html>

<head>
    <title>Profile</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../stylesheets/change-profile.css">
    <link rel="stylesheet" href="/stylesheets/fontawesome/css/all.min.css">
    <script src="../javascript/jquery-3.3.1.min.js"></script>
    <script src="../socket.io/socket.io.js"></script>
</head>

<body>
    <div class="container">
        <div class="login-username">
            <a href="/chat" title="Back to chat page"><i class="far fa-comments"></i></a>
            <% if (typeof user != 'undefined') { %>
            <b id="login-username"><%= user.username %></b>
            <% } %>
        </div>
        <div class="container-form">
            <div id="msg-error-success">
                <% include ./partials/alert %>
            </div>
            <div>
                <div class="change-container">
                    <div class="change-title">Change your full name</div>
                    <div>
                        <input type="text" name="fullname" id="fullname" class="change-input"
                            value="<%= user.fullname %>">
                    </div>
                    <div>
                        <input type="submit" value="Apply" id="btn-apply-fullname" class="change-input">
                    </div>
                </div>
                <div class="change-container">
                    <div class="change-title">Change your avatar</div>
                    <div class="avatar-container">
                        <div>
                            <% if (user.avatar) { %>
                            <img src="data:image/jpeg;base64,<%= user.avatar %>" alt="avatar" id="img-avatar"
                                width="100px">
                            <% } else { %>
                            <img src="/images/avatar-icon.png" alt="avatar" id="img-avatar" width="100px">
                            <% } %>
                        </div>
                        <div class="input-file-container">
                            <input type="file" class="change-input" name="file" id="file"
                                accept="image/x-png,image/gif,image/jpeg">
                        </div>
                    </div>
                    <div>
                        <input type="button" value="Apply" id="btn-apply-avatar" class="change-input" disabled="true">
                    </div>
                </div>
                <div class="change-container">
                    <div class="change-title">Change your password</div>
                    <form action="/profile/change-password" method="POST">
                        <div>
                            <div>
                                <label for="oldPassword" class="form-title">Old Password</label>
                            </div>
                            <input type="password" id="old-password" name="oldPassword"
                                value="<%= typeof oldPassword != 'undefined' ? oldPassword : '' %>" required
                                class="change-input">
                        </div>
                        <div>
                            <div>
                                <label for="newPassword" class="form-title">New Password</label>
                            </div>

                            <input type="password" id="new-password" name="newPassword"
                                value="<%= typeof newPassword != 'undefined' ? newPassword : '' %>" required
                                class="change-input">
                        </div>
                        <div>
                            <div>
                                <label for="oldPassword2" class="form-title">Confirm Password</label>
                            </div>
                            <input type="password" id="new-password2" name="newPassword2"
                                value="<%= typeof newPassword2 != 'undefined' ? newPassword2 : '' %>" required
                                class="change-input">
                        </div>
                        <div>
                            <input type="submit" value="Apply" id="btn-apply-password" class="change-input">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="../javascript/change-profile.js"></script>
</body>

</html>