<!DOCTYPE html>
<html>

<head>
    <title>Profile</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/change-avatar.css">
    <script src="../javascript/jquery-3.3.1.min.js"></script>
    <script src="../socket.io/socket.io.js"></script>
</head>

<body>
    <div class="container">
        <div class="login-username">
            <% if (typeof user != 'undefined') { %>
            Username: <b id="login-username"><%= user.username %></b>
            <% } %>
        </div>
        <div class="container-form">
            <div id="msg-error-success">
                <% include ./partials/alert %>
            </div>
            <div class="change-avatar-container">
                <div class="change-avatar-title">Change avatar</div>
                <div>
                    <% if (file) { %>
                    <img src="/image/<%= file.filename %>" alt="avatar" id="img-avatar" width="150px">
                    <% } else { %>
                    <img src="/images/avatar-icon.png" alt="avatar" id="img-avatar" width="150px">
                    <% } %>
                </div>
                <form action="/profile/change-avatar" method="POST" enctype="multipart/form-data">
                    <div class="avatar-container">
                        <input type="file" class="change-avatar" name="file" id="file"
                            accept="image/x-png,image/gif,image/jpeg">
                    </div>
                    <div>
                        <input type="submit" value="Apply" id="btn-apply" class="change-avatar" disabled="true">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="../javascript/change-avatar.js"></script>
</body>

</html>